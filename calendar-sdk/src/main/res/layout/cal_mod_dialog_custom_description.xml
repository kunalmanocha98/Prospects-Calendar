<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="32dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_dialog_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a category"
                android:padding="16dp"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <View
                android:id="@+id/dialog_view"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/darkGray"
                android:layout_below="@id/txt_dialog_header"/>
            <EditText
                android:id="@+id/edt_description"
                android:layout_margin="16dp"
                android:textColor="@color/black"
                android:background="@drawable/cal_mod_bg_edt_description"
                android:inputType="textMultiLine"
                android:minHeight="150dp"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans_regular"
                android:padding="12dp"
                android:gravity="start|top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_view"/>
            <android.support.v7.widget.CardView
                android:id="@+id/btn_add_description"
                android:layout_below="@id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/testdemo">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="ADD"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="16sp"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>