<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:padding="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp">
        <TextView
            android:id="@+id/txt_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Keychain from archies"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Gift"
            android:textSize="8sp"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_categorytype_daysegment"/>
        <TextView
            android:id="@+id/txt_content_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:layout_below="@id/txt_category"
            android:text="$300"/>
        <TextView
            android:id="@+id/txt_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cash"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:layout_below="@id/txt_content_rate"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>
